<%- include ../partials/header.ejs %>
  <div class="container">
    <h1>Edit Directory</h1>
    <hr>
    <a href="/directory/add" class="btn btn-primary">Add New</a>
    <table class="table table-striped table-hover ">
      <thead>
        <tr>
          <th>Business</th>
          <th>Owner</th>
          <th>Edit</th>
          <th>Delete</th>
        </tr>
      </thead>
      <tbody>
        <% businesses.forEach(function(business) { %>
          <tr>
            <td><%= business.name %></td>
            <td><%= business.owner %></td>
            <td><a href="/directory/<%= business.id %>/edit">Edit</a></td>
            <td>
              <a href="/directory/<%= business.id %>/remove"
                 onclick="return confirm('Are you sure you want to delete?')">
                Delete
              </a>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div> <!-- container -->
<%- include ../partials/footer.ejs %>
